####### Compiler, tools and options

CC            = gcc
CXX           = g++
DEFINES       = -DBOOST_LOG_DYN_LINK -D_LARGEFILE64_SOURCE
CFLAGS        = -pipe -g -fPIC -Wall -W -D_REENTRANT -fno-inline $(DEFINES)
CXXFLAGS      = -pipe -g -fPIC -Wall -W -D_REENTRANT -fno-inline $(DEFINES)
INCPATH       = -I../include -I. -I../hook
LINK          = g++
LFLAGS        = -shared -Wl,-soname,libcrete_harness.so.1 
LIBS          = $(SUBLIBS) -L../bin -lboost_filesystem -lboost_system -lcrete_vm_comm -lcrete_hook
AR            = ar cqs
RANLIB        = 
TAR           = tar -cf
COMPRESS      = gzip -9f
COPY          = cp -f
SED           = sed
COPY_FILE     = cp -f
COPY_DIR      = cp -f -R
STRIP         = strip
INSTALL_FILE  = install -m 644 -p
INSTALL_DIR   = $(COPY_DIR)
INSTALL_PROGRAM = install -m 755 -p
DEL_FILE      = rm -f
SYMLINK       = ln -f -s
DEL_DIR       = rmdir
MOVE          = mv -f
CHK_DIR_EXISTS= test -d
MKDIR         = mkdir -p

####### Output directory

OBJECTS_DIR   = ./

####### Files

