####### Build rules

all: $(TARGET) $(TARGETA)

$(TARGET):  $(OBJECTS) $(SUBLIBS) $(OBJCOMP)  
	-$(DEL_FILE) $(TARGET) $(TARGET0) $(TARGET1) $(TARGET2)
	$(LINK) $(LFLAGS) -o $(TARGET) $(OBJECTS) $(LIBS) $(OBJCOMP)
	-ln -s $(TARGET) $(TARGET0)
	-ln -s $(TARGET) $(TARGET1)
	-ln -s $(TARGET) $(TARGET2)



staticlib: $(TARGETA)

$(TARGETA):  $(OBJECTS) $(OBJCOMP) 
	-$(DEL_FILE) $(TARGETA) 
	$(AR) $(TARGETA) $(OBJECTS)

dist: 
	@test -d .tmp/harness1.0.0 || mkdir -p .tmp/harness1.0.0
	$(COPY_FILE) --parents $(DIST) .tmp/harness1.0.0/ && $(COPY_FILE) --parents harness.h harness_global.h .tmp/harness1.0.0/ && $(COPY_FILE) --parents harness.cpp .tmp/harness1.0.0/ && (cd `dirname .tmp/harness1.0.0` && $(TAR) harness1.0.0.tar harness1.0.0 && $(COMPRESS) harness1.0.0.tar) && $(MOVE) `dirname .tmp/harness1.0.0`/harness1.0.0.tar.gz . && $(DEL_FILE) -r .tmp/harness1.0.0


clean: 
	-$(DEL_FILE) $(OBJECTS)
	-$(DEL_FILE) *~ core *.core


distclean: clean 
	-$(DEL_FILE) $(TARGET) 
	-$(DEL_FILE) $(TARGET0) $(TARGET1) $(TARGET2) $(TARGETA)


####### Sub-libraries

check: first

####### Compile

harness.o: harness.cpp
